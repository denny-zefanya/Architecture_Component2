<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zefanya.denny.architecturecomponent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/camerafilm"
        android:label="@string/app_name"
        android:roundIcon="@drawable/camerafilm"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArchitectureComponent">
        <activity
            android:name=".ui.content.ContentActivity"
            android:theme="@style/Theme.ArchitectureComponent" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name="zefanya.denny.architecturecomponent.ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>